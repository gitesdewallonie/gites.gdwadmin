<script>
function Envoyer(cle, sens){
   if (sens=='precedent'){
      cle=cle-1;
      document.formulaire.CCL_PK.value=cle;
      document.formulaire.action='formulaire.html';
      document.formulaire.submit();
   }
   if (sens=='suivant'){
      cle=cle+1;
      document.formulaire.CCL_PK.value=cle;
      document.formulaire.action='formulaire.html';
      document.formulaire.submit();
   }
}
</script>

