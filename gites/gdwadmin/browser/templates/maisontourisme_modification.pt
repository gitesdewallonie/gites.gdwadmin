<link href="gites_wallons_style.css" type=text/css rel=stylesheet>
</head>

<body>
<div metal:fill-slot="main"
     i18n:domain="gites">
<div class="content">
<style>
.ligne { 
      clear:both;
      margin:5px;
      padding:5px;
    }
.casep { 
      float:left;
      margin:2px;
      text-align:center;
      width:3em;
    }
.casem { 
      float:left;
      margin:2px;
      text-align:center;
      width:8em;
    }
.caseg { 
      float:left;
      margin:2px;
      text-align:center;
      width:15em;
      }
</style>

<form action= "@@gdwadmin.maisontourisme_update" method="get">
  <tal:maisontourisme define="mais view/maison_tourisme">
   
<h2>Modification d'une Maison du tourisme</h2>
<br>

		    Nom : 
        <input type="text" name="fmais_nom" size="50" tal:attributes="value mais/mais_nom"/>
        <br>

        URL : 
        <input type="text" name="fmais_url" size="50" tal:attributes="value mais/mais_url"/>
        <br>

        Code : 
        <input type="text" name="fmais_code" size="50" tal:attributes="value mais/mais_code" />
        <br>

        GPS Long : 
        <input type="text" name="fmais_gps_long" size="50" tal:attributes="value mais/mais_gps_long" />
        <br>

        GPS Lat : 
        <input type="text" name="fmais_gps_lat" size="50" tal:attributes="value mais/mais_gps_lat" />
        <br>

        ID Google (*) : 
        <input type="text" name="fmais_id" size="50" tal:attributes="value mais/mais_id"/>
        <br>

        <input type="hidden"
                    name="fpro_employe_modification"
                    value="AUTHENTICATED_USER.getUserName()" />

        <input type="hidden"
                    name="fmais_pk"
                    value="" tal:attributes="value mais/mais_pk" />

        <input type="submit" 
                    value="Modifier cette Maison du tourisme">
</tal:maisontourisme>
</form>

</div><!--content-->
</div><!--main-->
</body>
</html>