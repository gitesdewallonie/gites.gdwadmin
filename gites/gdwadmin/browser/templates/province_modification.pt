<form action= "@@gdwadmin.province_update" method="get">
  <tal:commune define="prov view/table_prov">
   
<h2>Modification d'une province</h2>
<br>

		    Nom : 
        <input type="text" name="fprov_nom" size="50" tal:attributes="value prov/prov_nom"/>
        <br>

        <input type="hidden"
                    name="fpro_employe_modification"
                    value="AUTHENTICATED_USER.getUserName()" />

        <input type="hidden"
                    name="fprov_pk"
                    value="" tal:attributes="value prov/prov_pk" />

        <input type="submit" 
                    value="Modifier cette province">
</tal:commune>
</form>

