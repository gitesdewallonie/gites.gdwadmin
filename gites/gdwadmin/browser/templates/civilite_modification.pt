<form action= "@@gdwadmin.civilite_update" method="get">
  <tal:type_hebontourisme define="civ view/civilite">
   
<h2>Modification d'une civilité</h2>
<br>

        Titre : 
        <input type="text" name="fciv_titre" size="50" tal:attributes="value civ/civ_titre" />
        <br>
        <input type="hidden"
                    name="fpro_employe_modification"
                    value="AUTHENTICATED_USER.getUserName()" />

        <input type="hidden"
                    name="fciv_pk"
                    value="" tal:attributes="value civ/civ_pk" />

        <input type="submit" 
                    value="Modifier cette civilité">
</tal:type_hebontourisme>
</form>

