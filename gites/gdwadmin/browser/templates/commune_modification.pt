<body>
<div metal:fill-slot="main"
     i18n:domain="gites">
<div class="content">
<style>
.ligne { 
      clear:both;
      margin:5px;
      padding:5px;
    }
.casep { 
      float:left;
      margin:2px;
      text-align:center;
      width:3em;
    }
.casem { 
      float:left;
      margin:2px;
      text-align:center;
      width:8em;
    }
.caseg { 
      float:left;
      margin:2px;
      text-align:center;
      width:15em;
      }
</style>

<form action= "@@gdwadmin.commune_update" method="get">
  <tal:commune define="com view/table_com">
   
<h2>Modification d'une commune</h2>
<br>

		    Nom : 
        <input type="text" name="fcom_nom" size="50" tal:attributes="value com/com_nom"/>
        <br>

        CP : 
        <input type="text" name="fcom_cp" size="50" tal:attributes="value com/com_cp"/>
        <br>

        INS : 
        <input type="text" name="fcom_ins" size="50" tal:attributes="value com/com_ins" />
        <br>


        RÃ©gion du guide :
        <select tal:define="com view/table_com" name="fcom_reg_fk">
            <tal:block repeat="reg view/regionguide">
            <option tal:condition="python: com.com_reg_fk != reg.reg_pk" 
                tal:attributes="value reg/reg_pk"
                tal:content="string: ${reg/reg_nom}">
            </option>
            <option tal:condition="python: com.com_reg_fk == reg.reg_pk"
                tal:attributes="value reg/reg_pk"
                tal:content="string: ${reg/reg_nom}" value="" selected='selected'>
            </option>
            </tal:block>
        </select>
        <br>

        Province : 
        <select tal:define="com view/table_com"  name="fcom_prov_fk">
            <tal:block repeat="prov view/province">
            <option tal:condition="python: com.com_prov_fk != prov.prov_pk" 
                tal:attributes="value prov/prov_pk"
                tal:content="string: ${prov/prov_nom}">
            </option>
            <option tal:condition="python: com.com_prov_fk == prov.prov_pk"
                tal:attributes="value prov/prov_pk"
                tal:content="string: ${prov/prov_nom}" value="" selected='selected'>
            </option>
            </tal:block>
        </select>
        <br>

        Maison du tourisme : 
        <select tal:define="com view/table_com"  name="fcom_mais_fk">
            <tal:block repeat="mais view/maisontourisme">
            <option tal:condition="python: com.com_mais_fk != mais.mais_pk" 
                tal:attributes="value mais/mais_pk"
                tal:content="string: ${mais/mais_nom}">
            </option>
            <option tal:condition="python: com.com_mais_fk == mais.mais_pk"
                tal:attributes="value mais/mais_pk"
                tal:content="string: ${mais/mais_nom}" value="" selected='selected'>
            </option>
            </tal:block>
        </select>
        <br>

        ID Google (*) : 
        <input type="text" name="fcom_id" size="50" tal:attributes="value com/com_id"/>
        <br>

        <input type="hidden"
                    name="fpro_employe_modification"
                    value="AUTHENTICATED_USER.getUserName()" />

        <input type="hidden"
                    name="fcom_pk"
                    value="" tal:attributes="value com/com_pk" />

        <input type="submit" 
                    value="Modifier cette commune">
</tal:commune>
</form>

</div><!--content-->
</div><!--main-->
</body>
</html>